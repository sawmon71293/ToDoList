{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "linebreak-style": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "no-underscore-dangle": "off"
  },
  "ignorePatterns": ["dist/", "build/"],
  "overrides": [
    {
      "files": ["**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
